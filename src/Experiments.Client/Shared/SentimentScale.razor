<div class="sentiment">
    <h4>Your sentiment is...</h4>
    <p>😡🙁😐😃😍</p>
    <div class="marker">
        <div style="left: @ValuePercentage;">
            <div>▲</div>
            <label>@Value.ToString("0.0")%</label>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public float Value { get; set; }

    private string ValuePercentage => $"{this.Value}%";
}
